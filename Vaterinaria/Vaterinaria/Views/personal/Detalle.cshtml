@model IEnumerable<Vaterinaria.Models.Citas>

@{
    Layout = null;
    @Styles.Render("~/Content/css/styleDetalle.css")
    @Styles.Render("~/Content/css/jquery-ui.css")
    @Scripts.Render("~/Scripts/js/jquery-1.12.0.min.js")
    @Scripts.Render("~/Scripts/js/filedrag.js")
    @Scripts.Render("~/Scripts/js/jquery-ui.js")
}




<html>
<head>
    <title>Detalle</title>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Employee Application Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="//fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>
<body>
    <div class="main">
        <h1 style="color: black;">Detalle de cita</h1>
        <div class="w3_agile_main_grids" style="border: solid 1px black;border-radius:10px; box-shadow: 2px 5px 4px 1px;">
            <div class="agileits_w3layouts_main_grid">
                @foreach (var item in Model)
                {
                    <div class="agile_main_grid_left">
                        <div class="w3_agileits_main_grid_left_grid">

                            <label>Nombre del sueño</label>
                            <input type="text" placeholder="@item.Nombre_Propietario" required="" disabled>
                            <label>Nombre de mascota</label>
                            <input type="text" placeholder="@item.Nombre_Animal" required="" disabled>
                            <label>Edad de mascota</label>
                            <input type="text" placeholder="@item.Edad" required="" disabled>
                            <label>Fecha de la cita</label>
                            <input type="text" placeholder="@item.Fecha_cita" required="" disabled>
                        </div>
                    </div>
                    <div class="agile_main_grid_left">
                        <label>Nombre de veterinario</label>
                        <input type="text" placeholder="@item.personal.Nombre" required="" disabled>
                        <label>Tipo y raza de la mascota</label>
                        <input type="text" placeholder="@item.Animal.Tipo, @item.Raza" required="" disabled>
                        <label>Sexo de la mascota</label>
                        <input type="text" placeholder="@item.Sexo" required="" disabled>
                        <label>Hora de la cita</label>
                        <input type="text" placeholder="@item.Hora_cita" required="" disabled>

                    </div>

                    <div class="clear"> </div>
                    <button class="btn btn-dark">
                        Estado de la cita    <span class="badge bg-light text-dark">  @item.Estado.Tipo_estado</span>
                    </button>
                    <br /> <br /> <br />
                    @Html.ActionLink("Modificar", "Modificar", new { id = item.Id_cita }, new { @class = "btn btn-success", @type = "submit" })
                    <br /> <br />
                    @Html.ActionLink("Inicio", "Index", "personal", new { @class = "btn btn-light fas fa-arrow-circle-left" })

                }
            </div>
                </div>
    </div>
 
</body>
</html>