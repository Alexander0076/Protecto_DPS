@model Vaterinaria.Models.UsuarioCliente


@{
    Layout = null;
    @Styles.Render("~/Content/css/style1.css")
}


<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Working Signin form Responsive Widget Template :: W3layouts</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" content="Working Signin form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //Meta tag Keywords -->
    <link href="//fonts.googleapis.com/css2?family=Karla:wght@400;700&display=swap" rel="stylesheet">
    <!--//Style-CSS -->
</head>

<body>

    <!-- form section start -->
    <section class="w3l-workinghny-form">
        <!-- /form -->
        <div class="workinghny-form-grid">
            <div class="wrapper">
                <div class="workinghny-block-grid">
                    <div class="form-right-inf">
                        @using (Html.BeginForm("Agregar", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="login-form-content">
                                <form action="#" class="signin-form" method="post" id="frm">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="one-frm">

                                        <label>Nombre de usuario</label>
                                        @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { } })
                                        @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="one-frm">
                                        <label>Password</label>
                                        @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="one-frm">
                                        <label>Nombre Completo</label>
                                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { } })
                                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="one-frm">
                                        <label>Edad</label>
                                        @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { } })
                                        @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="one-frm">
                                        <label>Sexo</label>
                                        @Html.EditorFor(model => model.Sexo, new { htmlAttributes = new { } })
                                        @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="one-frm">
                                        <label>Direccion</label>
                                        @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { } })
                                        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="one-frm">
                                        <label>Telefono</label>
                                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { } })
                                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                    </div>
                                    <input type="submit" name="Submit" value="Registrase" class="btn btn-style mt-3" />
                                    <p class="already">No tienes una cuenta? @Html.ActionLink("Iniciar Sesión", "Login", "Home")</p>
                                    <p class="already">@Html.ActionLink("Inicio", "Index", "Home")</p>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- //form -->
    </section>
    <!-- //form section start -->


</body>



</html>
