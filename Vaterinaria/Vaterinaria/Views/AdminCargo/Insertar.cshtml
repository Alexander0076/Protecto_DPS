@model Vaterinaria.Models.cargo

@{
    Layout = null;
    @Styles.Render("~/Content/css/styleDetalle.css")
    @Styles.Render("~/Content/css/jquery-ui.css")
    @Scripts.Render("~/Scripts/js/jquery-1.12.0.min.js")
    @Scripts.Render("~/Scripts/js/filedrag.js")
    @Scripts.Render("~/Scripts/js/jquery-ui.js")
}


<html>
<head>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Employee Application Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="//fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>
<body>
    <div class="main">
        <h1 style="color:black;">Nuevo ingreso de cargo</h1>
        <div class="w3_agile_main_grids">
            <div class="agileits_w3layouts_main_grid">
                @using (Html.BeginForm("Agregar", "AdminCargo", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form id="upload" action="#" method="post" enctype="multipart/form-data">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="agile_main_grid_left">
                            @Html.EditorFor(model => model.Nombre_cargo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de cargo", @required = "" } })
                            @Html.ValidationMessageFor(model => model.Nombre_cargo, "", new { @class = "text-danger" })

                        </div>
                        <div class="clear"> </div>
                        <input type="submit" value="Ingresar">
                        <br /> <br />
                        @Html.ActionLink("Atras", "Index", "AdminCargo", new { @class = "btn btn-light fas fa-arrow-circle-left" })
                    </form>
                }
            </div>
        </div>
    </div>



</body>
</html>