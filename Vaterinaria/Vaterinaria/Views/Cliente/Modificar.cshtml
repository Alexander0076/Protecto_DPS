@model Vaterinaria.Models.Citas

@{
    Layout = null;
    @Styles.Render("~/Content/css/StyleNuevaCita.css")
    @Styles.Render("~/Content/css/bootstrap.css")
}
<h1>Crear Cita</h1>
<div class="bg-w3layouts-main">
    <div class="form-content-agileinfo">
        @using (Html.BeginForm("Editar", "Cliente", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <form action="#" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_cita)
            <div class="main-divs-agileits-w3layouts">
                <div class="bottom-w3-agileits-space form-text1">
                    @Html.EditorFor(model => model.Nombre_Propietario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre Completo", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Nombre_Propietario, "", new { @class = "text-danger" })
                </div>
                <div class="bottom-w3-agileits-space form-text2">
                    @Html.EditorFor(model => model.Nombre_Animal, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de la mascota", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Nombre_Animal, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="main-divs-agileits-w3layouts">
                <div class="bottom-w3-agileits-space form-text1">
                    @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Edad de la mascota", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                </div>
                <div class="bottom-w3-agileits-space form-text2">
                    @Html.EditorFor(model => model.Raza, new { htmlAttributes = new { @class = "form-control", @placeholder = "Raza", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Raza, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="main-divs-agileits-w3layouts">
                <div class="bottom-w3-agileits-space form-text2">
                    @Html.EditorFor(model => model.Sexo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sexo de la mascota", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                </div>
                <div class="bottom-w3-agileits-space form-text1">
                    @Html.DropDownList("listaAnimal", null, htmlAttributes: new { @class = "frm-field required sect", @onchange = "change_country(this.value)", @id = "country1" })
                    @Html.ValidationMessageFor(model => model.Id_TipoAnimal, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="main-divs-agileits-w3layouts">
                <div class="bottom-w3-agileits-space form-text1">
                    <label style="color: black;">Fecha de la cita</label>
                    @Html.EditorFor(model => model.Fecha_cita, new { htmlAttributes = new { @class = "form-control", @type = "Date", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Fecha_cita, "", new { @class = "text-danger" })
                </div>
                <div class="bottom-w3-agileits-space form-text2">
                    <label style="color: black;">Hora de la cita</label>
                    @Html.EditorFor(model => model.Hora_cita, new { htmlAttributes = new { @class = "form-control", @type = "Time", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Hora_cita, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="main-divs-agileits-w3layouts">
                <div class="bottom-w3-agileits-space form-text1">
                    <label style="color: black;">Veterinario</label>
                    @Html.DropDownList("listaPersonal", null, htmlAttributes: new { @class = "frm-field required sect", @onchange = "change_country(this.value)", @id = "country1" })
                    @Html.ValidationMessageFor(model => model.Id_personal, "", new { @class = "text-danger" })
                </div>
                <div class="bottom-w3-agileits-space form-text2">
                    <label style="color: black;">Estado de la cita</label>
                    @Html.DropDownList("listaEstado", null, htmlAttributes: new { @class = "frm-field required sect", @onchange = "change_country(this.value)", @id = "country1" })
                    @Html.ValidationMessageFor(model => model.Id_estado, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="main-divs-agileits-w3layouts">
                <div class="bottom-w3-agileits-space form-text1">
                    <label style="color: black;">Usuario</label>
                    @Html.DropDownList("listaCliente", null, htmlAttributes: new { @class = "frm-field required sect", @onchange = "change_country(this.value)", @id = "country1" })
                    @Html.ValidationMessageFor(model => model.Id_personal, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" value="Submit">
            <br />
            @Html.ActionLink("Volver", "Index", "personal", new { @class = "btn btn-warning" })
            <div class="clear"></div>
        </form>
        }
    </div>
</div>